{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "lib": ["dom", "es2017"],
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "suppressWhileTypeErrorsPresent": false
      }
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*"
  ]
}
